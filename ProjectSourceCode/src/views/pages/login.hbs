    <div class="form-group">
        <label for="username">Username</label>
        <input type="username" class="form-control" id="username" name="username" placeholder="Username"><br>
    </div>
    
    <div class="form-group">
        <labe for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password"><br>
